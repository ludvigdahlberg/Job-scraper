{
  "compilerOptions": {
    /* Directory structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* ESM for Node */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",

    /* Type support */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,

    /* Output helpers */
    "sourceMap": true,
    "declaration": false,

    /* Allow .js extension in imports (for ESM compatibility) */
    "allowImportingTsExtensions": false
  },

  /* Include source files */
  "include": ["src/**/*"]
}
